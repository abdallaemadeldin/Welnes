{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "isolatedModules": false,
        "jsx": "react",
        "lib": [
            "es6"
        ],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "baseUrl": ".",
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ]
}